---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
import Breadcrumbs from "@components/Breadcrumbs.astro";
---

<Layout>
  <Header activeNav={"about"} />
  <main id="main-content">
    <section id="hero">
      <Breadcrumbs />
      <map name="room" class="hover:animate-pulse">
        <area shape="circle" coords="60,360,35" href="/welcome" alt="Back" />
        <area shape="circle" coords="650,370,35" href="/goodbye" alt="Next" />
      </map>
      <div
        id="selected"
        class="animate__animated animate__slideInRight flex justify-end"
      >
        <img
          alt="Room-3"
          usemap="#room"
          class="h-auto w-[700px]"
          src="/assets/room-character-3.png"
          id="room-three"
        />
      </div>
      <p>
        Learn more about UCF by visiting
        <LinkButton
          href="https://www.ucf.edu/"
          className="hover:text-skin-accent text-transparent bg-clip-text bg-gradient-to-r  from-gray-600  to-yellow-500 text-2xl"
        >
          <img
            alt="UCF"
            id="ucf"
            src="/assets/UCF-icon.png"
            class="w-14 hover:animate-pulse"
          />
        </LinkButton>
        and my previous projects by visiting
        <LinkButton href="/projects" className="underline theme">
          PROJECT-SECTION
        </LinkButton>

        you can find examples of my previous projects, showcasing my technical
        skills and problem-solving abilities.
      </p>
    </section>
  </main>
</Layout>

<Footer />

<style>
  /* ===== Hero Section ===== */
  /* ...existing styles... */
  .animate__animated.animate__slideInRight {
    animation-direction: alternate;
    animation-duration: 1.5s;
  }
  #main-content {
    animation: 2s alternate fadeIn ease-in-out;
  }
  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
  .image-background1 {
    @apply bg-cover bg-center bg-no-repeat duration-500 ease-in sm:bg-[url('/assets/Colombia-icons.png')];
  }
  .image-background2 {
    @apply bg-cover bg-center bg-no-repeat duration-500 ease-in sm:bg-[url('/assets/ucf-background.jpg')];
  }
  #hero {
    @apply pb-6;
  }
  #hero h1 {
    @apply my-4 flex text-3xl font-bold sm:my-7 sm:justify-center sm:text-5xl;
  }
  #hero .rss-link {
    @apply mb-6;
  }
  #hero .rss-icon {
    @apply mb-2 h-6 w-6 scale-110 fill-skin-accent sm:mb-3 sm:scale-125;
  }
  #hero p {
    @apply my-2 p-3 pt-10 text-lg;
  }
  .social-wrapper {
    @apply mt-4 flex flex-col sm:flex-row sm:items-center;
  }
  .social-links {
    @apply mb-1 mr-2 whitespace-nowrap sm:mb-0;
  }
  .theme,
  html[data-theme="dark"] .theme {
    @apply text-blue-300 hover:text-skin-accent;
  }
  .theme,
  html[data-theme="light"] .theme {
    @apply text-green-600 hover:text-skin-accent;
  }
</style>
